{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es6",
    "lib": ["es6"],
    "types": ["reflect-metadata", "node"],
    "typeRoots": ["node_modules/@types"],
    "module": "commonjs",
    "declaration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "removeComments": true,
    "noUnusedLocals": false,
    "noUnusedParameters": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "inlineSources": true
  },
  "files": [
    "src/index.d.ts"
  ],
  "include": [
    "src/**/*",
    "typings/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
