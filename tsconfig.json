{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es6",
    "lib": ["es6"],
    "types": ["reflect-metadata", "node"],
    "typeRoots": ["node_modules/@types"],
    "module": "commonjs",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "removeComments": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "inlineSources": true
  },
    "include": [
    "src/**/*",
    "typings/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
